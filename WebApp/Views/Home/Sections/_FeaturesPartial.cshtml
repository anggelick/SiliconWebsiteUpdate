@model FeaturesViewModel

<section class="features">
    <div id="@Model.Id" class="container">

        <h2>@Model.Title</h2> 
        <p>@Model.Text</p>

        <div class="tool-features">

            @if (Model.Features != null!)
            {
                foreach(var feature in Model.Features)
                {
                    <div class="box">
                        <div class="img-div">
                            <img src="@feature.FeatureImage.ImageUrl" alt="@feature.FeatureImage.AltText" />
                        </div>

                        <h5>@feature.FeatureTitle</h5>
                        <p>@feature.FeatureDescription</p>
                    </div>
                }
            }

        </div>
    </div>
</section>